{
    "compilerOptions": {
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "target": "ESNext",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./build",
      "rootDir": "src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}