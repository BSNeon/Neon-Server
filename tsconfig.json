{
    "compilerOptions": {
      "lib": [
        "ESNext",
        "DOM",
        "DOM.Iterable"
      ],
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "target": "ES6",
      "module": "CommonJS",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./build",
      "rootDir": "src",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "experimentalDecorators": true
    },
    "include": ["./src/**/*"],
    "exclude": ["node_modules"]
}